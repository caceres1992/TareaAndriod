<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#F2B79F"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_margin="50dp"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="#C31818"
            android:id="@+id/cardcontainer"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:padding="20dp"
                      android:background="#fff"
                      android:layout_height="match_parent">
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/logon_logo"
                       android:layout_height="160dp"/>
            <TextView android:layout_width="match_parent"
                      android:text="LOGIN"
                      android:textColor="#676464"
                      android:textStyle="bold"
                      android:textSize="30dp"
                      android:textAlignment="center"
                      android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    android:id="@+id/TiUsuario"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                       android:hint="Usaurio"
                     android:textColor="#959090"
                        android:inputType="text"
                        android:drawableRight="@drawable/ic_person"
                        android:drawablePadding="10dp"
                        android:id="@+id/EtUsuario"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="15"
                    android:outlineAmbientShadowColor="@color/colorPrimaryDark"
                    app:passwordToggleEnabled="true"

                    android:id="@+id/TiPassword"
                    app:passwordToggleTint="#F2B79F"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="passowrd"
                        android:textColor="#959090"
                        android:background="#F3F3F3"
                        android:inputType="textPassword"
                        android:id="@+id/EtPassword"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_marginTop="10dp"
                      android:text="Olvido su password?"
                      android:textColor="#E91E63"
                      android:textAlignment="textEnd"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:background="#000"
                      android:layout_margin="10dp"
                      android:layout_height="1dp"/>
            <Button android:layout_width="match_parent"
                    android:text="Login"
                    android:layout_marginTop="10dp"
                    android:elevation="5dp"
                    android:background="@drawable/backgroundbutton"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
